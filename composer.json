{
    "name": "nova-kit/nova-packages-tool",
    "description": "Tool for Laravel Nova Packages Development",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Mior Muhammad Zaki",
            "email": "crynobone@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "NovaKit\\NovaPackagesTool\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Workbench\\App\\": "workbench/app/",
            "Workbench\\Database\\": "workbench/database/"
        }
    },
    "require": {
        "php": "^7.3 || ^8.0",
        "laravel/nova": ">=4.27.0 <4.28.0"
    },
    "require-dev": {
        "orchestra/testbench": "^6.31 || ^7.28 || ^8.8",
        "orchestra/workbench": "^0.1.3"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://nova.laravel.com"
        }
    ],
    "extra": {
        "laravel": {
            "providers": [
                "NovaKit\\NovaPackagesTool\\LaravelServiceProvider"
            ]
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "@composer run clear",
            "@composer run prepare"
        ],
        "clear": "@php vendor/bin/testbench package:purge-skeleton --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "nova:build": [
            "npm --prefix './vendor/laravel/nova/' ci",
            "npm ci",
            "TAILWIND_MODE=build npm run prod"
        ],
        "build": "@php vendor/bin/testbench workbench:build",
        "serve": [
            "@composer run clear",
            "@composer run prepare",
            "@composer run build",
            "@php vendor/bin/testbench serve"
        ],
        "lint": [
            "@composer run prepare",
            "pint"
        ]
    },
    "prefer-stable": true,
    "minimum-stability": "dev"
}